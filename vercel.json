{
    "builds": [
      {
        "src": "server/index.ts",
        "use": "@vercel/node"
        
      },
      {
        "src": "client/dist/**/*",
        "use": "@vercel/static"
      },
      {
        "scripts": {
          "vercel-build": "vite build && tsc && node server/index.js"
        }
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "server/index.ts" },
      { "src": "/(.*)", "dest": "client/dist/$1" }
    ]
  }
  